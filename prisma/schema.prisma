// Prisma schema for Event Contract Trading.
// Models: User (NextAuth, no image), Account, Session, Site, Section, EventCache.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String              @id @default(cuid())
  email            String?             @unique
  emailVerified    DateTime?
  name             String?
  image            String?
  password         String?
  accounts         Account[]
  sessions         Session[]
  sites            Site[]
  followedEvents   UserFollowedEvent[]
  followedMarkets  UserFollowedMarket[]
}

model Account {
  userId            String
  id                String  @id @default(cuid())
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Site {
  id                String       @id @default(cuid())
  userId            String
  name              String
  baseUrl           String
  adapterKey        String
  loginUsername     String?
  loginPassword     String?
  /** Kalshi API Key ID (encrypted). Used when adapterKey=kalshi for authenticated requests. */
  apiKeyId          String?
  /** Kalshi private key PEM (encrypted). Used with apiKeyId for RSA-PSS signature. */
  apiKeyPrivateKey  String?      @db.Text
  createdAt         DateTime     @default(now())
  sections      Section[]
  eventCaches   EventCache[]
  markets       Market[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Section {
  id           String        @id @default(cuid())
  siteId       String
  externalId   String
  name         String
  urlOrSlug    String?
  enabled      Boolean       @default(true)
  eventCaches  EventCache[]
  markets      Market[]

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, externalId])
}

model EventCache {
  id          String               @id @default(cuid())
  siteId      String
  sectionId   String
  externalId  String
  title       String
  description String?              @db.Text
  /** open/active = displayable; closed/settled = not shown in user tables. */
  status      String?
  /** First market's trading close time = "Market closes" in Timeline and payout (最近交易截止时间). */
  nextTradingCloseTime DateTime?
  endDate     DateTime?
  volume      Float?
  liquidity   Float?
  outcomes    Json?
  raw         Json?
  fetchedAt   DateTime             @default(now())

  site           Site               @relation(fields: [siteId], references: [id], onDelete: Cascade)
  section        Section            @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  followedBy     UserFollowedEvent[]
  markets       Market[]

  @@unique([siteId, sectionId, externalId])
}

model Market {
  id               String    @id @default(cuid())
  eventCacheId     String
  siteId           String
  sectionId        String
  externalId       String
  title            String
  /** open/active = displayable; closed/settled = not shown in user tables. */
  status           String?
  closeTime        DateTime?
  /** Trading deadline = "Market closes" in Timeline and payout. For Kalshi: close_time. */
  nextTradingCloseTime DateTime?
  /** Projected payout date = "Projected payout" in Timeline and payout. For Kalshi: close_time + settlement_timer_seconds or settlement_ts. */
  settlementDate   DateTime?
  volume           Float?
  liquidity    Float?
  outcomes     Json?
  raw          Json?
  fetchedAt    DateTime @default(now())

  eventCache EventCache         @relation(fields: [eventCacheId], references: [id], onDelete: Cascade)
  site       Site               @relation(fields: [siteId], references: [id], onDelete: Cascade)
  section    Section            @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  followedBy UserFollowedMarket[]

  @@unique([siteId, eventCacheId, externalId])
}

model UserFollowedMarket {
  id             String   @id @default(cuid())
  userId         String
  marketId       String
  attentionLevel Int      @default(1)
  createdAt      DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  market Market @relation(fields: [marketId], references: [id], onDelete: Cascade)

  @@unique([userId, marketId])
}

model UserFollowedEvent {
  id             String   @id @default(cuid())
  userId         String
  eventCacheId   String
  attentionLevel Int      @default(1)
  createdAt      DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventCache EventCache @relation(fields: [eventCacheId], references: [id], onDelete: Cascade)

  @@unique([userId, eventCacheId])
}

/** Tokens for email verification and password reset. type: "email_verify" | "password_reset" */
model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  type       String
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
  @@index([token, type])
}
