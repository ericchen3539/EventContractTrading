// Prisma schema for Event Contract Trading.
// Models: User (NextAuth, no image), Account, Session, Site, Section, EventCache.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  sites         Site[]
}

model Account {
  userId            String
  id                String  @id @default(cuid())
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Site {
  id            String       @id @default(cuid())
  userId        String
  name          String
  baseUrl       String
  adapterKey    String
  loginUsername String?
  loginPassword String?
  createdAt     DateTime     @default(now())
  sections      Section[]
  eventCaches   EventCache[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Section {
  id          String        @id @default(cuid())
  siteId      String
  externalId  String
  name        String
  urlOrSlug   String?
  enabled     Boolean       @default(true)
  eventCaches EventCache[]

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, externalId])
}

model EventCache {
  id          String    @id @default(cuid())
  siteId      String
  sectionId   String
  externalId  String
  title       String
  description String?   @db.Text
  /** First market's trading end time (close_time or expiration_time). */
  createdAt   DateTime?
  endDate     DateTime?
  volume      Float?
  liquidity   Float?
  outcomes    Json?
  raw         Json?
  fetchedAt   DateTime  @default(now())

  site    Site    @relation(fields: [siteId], references: [id], onDelete: Cascade)
  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([siteId, sectionId, externalId])
}
