// Prisma schema for Event Contract Trading.
// Models: User (NextAuth, no image), Account, Session, Site, Section, EventCache.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String              @id @default(cuid())
  email            String?             @unique
  emailVerified    DateTime?
  name             String?
  image            String?
  password         String?
  accounts         Account[]
  sessions         Session[]
  sites            Site[]
  followedEvents   UserFollowedEvent[]
  followedMarkets  UserFollowedMarket[]
}

model Account {
  userId            String
  id                String  @id @default(cuid())
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Site {
  id            String       @id @default(cuid())
  userId        String
  name          String
  baseUrl       String
  adapterKey    String
  loginUsername String?
  loginPassword String?
  createdAt     DateTime     @default(now())
  sections      Section[]
  eventCaches   EventCache[]
  marketCaches  MarketCache[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Section {
  id           String        @id @default(cuid())
  siteId       String
  externalId   String
  name         String
  urlOrSlug    String?
  enabled      Boolean       @default(true)
  eventCaches  EventCache[]
  marketCaches MarketCache[]

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, externalId])
}

model EventCache {
  id          String               @id @default(cuid())
  siteId      String
  sectionId   String
  externalId  String
  title       String
  description String?              @db.Text
  /** First market's trading end time (close_time or expiration_time). */
  createdAt   DateTime?
  endDate     DateTime?
  volume      Float?
  liquidity   Float?
  outcomes    Json?
  raw         Json?
  fetchedAt   DateTime             @default(now())

  site           Site               @relation(fields: [siteId], references: [id], onDelete: Cascade)
  section        Section            @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  followedBy     UserFollowedEvent[]
  marketCaches   MarketCache[]

  @@unique([siteId, sectionId, externalId])
}

model MarketCache {
  id           String   @id @default(cuid())
  eventCacheId String
  siteId       String
  sectionId    String
  externalId   String
  title        String
  closeTime    DateTime?
  volume       Float?
  liquidity    Float?
  outcomes     Json?
  raw          Json?
  fetchedAt    DateTime @default(now())

  eventCache  EventCache          @relation(fields: [eventCacheId], references: [id], onDelete: Cascade)
  site        Site                @relation(fields: [siteId], references: [id], onDelete: Cascade)
  section     Section             @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  followedBy  UserFollowedMarket[]

  @@unique([siteId, eventCacheId, externalId])
}

model UserFollowedMarket {
  id             String   @id @default(cuid())
  userId         String
  marketCacheId  String
  attentionLevel Int      @default(1)
  createdAt      DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  marketCache MarketCache @relation(fields: [marketCacheId], references: [id], onDelete: Cascade)

  @@unique([userId, marketCacheId])
}

model UserFollowedEvent {
  id             String   @id @default(cuid())
  userId         String
  eventCacheId   String
  attentionLevel Int      @default(1)
  createdAt      DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventCache EventCache @relation(fields: [eventCacheId], references: [id], onDelete: Cascade)

  @@unique([userId, eventCacheId])
}
